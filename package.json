{
  "name": "cloudyverse",
  "version": "1.0.0",
  "description": "Full-stack TypeScript application with Vite",
  "main": "src/server.ts",
  "type": "module",
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "preinstall": "node -e \"if (process.version !== 'v22.14.0') { console.error('❌ This project requires Node.js v22.14.0. Current version: ' + process.version); console.error('Please run: nvm use'); process.exit(1); }\"",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port 3005",
    "dev:server": "tsx watch src/server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview --port 3005",
    "start": "node dist/server.js",
    "kill-ports": "kill-port 3005 3006",
    "type-check": "tsc --noEmit",
    "db:reset": "rm -rf tmp_uploads uploads database.db && npm run dev",
    "check-node-version": "node -e \"if (process.version !== 'v22.14.0') { console.error('❌ This project requires Node.js v22.14.0. Current version: ' + process.version); console.error('Please run: nvm use'); process.exit(1); } else { console.log('✅ Node.js version is correct: ' + process.version); }\"",
    "setup-node": "./scripts/setup-node.sh"
  },
  "dependencies": {
    "@mantine/code-highlight": "^8.1.3",
    "@mantine/core": "^8.1.3",
    "@mantine/dates": "^8.1.3",
    "@mantine/form": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@mantine/notifications": "^8.1.3",
    "@reduxjs/toolkit": "^2.8.2",
    "@tabler/icons-react": "^3.34.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "kill-port": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vite": "^4.5.0",
    "vite-plugin-node": "^3.1.0"
  }
}
